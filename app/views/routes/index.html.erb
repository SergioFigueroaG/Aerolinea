<p id="notice"><%= notice %></p>

<h1>Listing Routes</h1>

<table>
  <thead>
    <tr>
      <th>Ciudad salida</th>
      <th>Ciudad destino</th>
      <th>Hora salida</th>
      <th>Hora llegada</th>
      <th>Avion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.ciudad_salida.nombre %></td>
        <td><%= route.ciudad_destino.nombre %></td>
        <td><%= route.hora_salida %></td>
        <td><%= route.hora_llegada %></td>
        <td><%= route.airplane.nombre_aerolinea %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

